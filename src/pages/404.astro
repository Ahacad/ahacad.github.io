---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Page Not Found | Ahacad">
  <div class="container mx-auto px-4 flex flex-col items-center justify-center py-16 text-center">
    <h1 class="text-5xl font-bold tracking-tighter mb-6">404</h1>
    <h2 class="text-3xl font-semibold mb-4">Page Not Found</h2>
    <p class="text-muted-foreground max-w-md mb-8">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <a 
      href="/" 
      class="inline-flex h-10 items-center justify-center rounded-md bg-primary px-8 text-sm font-medium text-primary-foreground shadow transition-colors hover:bg-primary/90"
    >
      Go Home
    </a>
  </div>
</MainLayout>
